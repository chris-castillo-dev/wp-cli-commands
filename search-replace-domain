wp db query "UPDATE $(wp db prefix --allow-root)posts SET post_content = replace(post_content, 'http://staging.sandbox.pdms.ca', 'http://staging.pdms.ca')" --allow-root
wp db query "UPDATE $(wp db prefix --allow-root)options SET option_value = replace(option_value, 'http://staging.sandbox.pdms.ca', 'http://staging.pdms.ca') WHERE option_name = 'home' OR option_name = 'siteurl'" --allow-root
wp db query "UPDATE $(wp db prefix --allow-root)posts SET guid = replace(guid, 'http://staging.sandbox.pdms.ca', 'http://staging.pdms.ca')" --allow-root
wp db query "UPDATE $(wp db prefix --allow-root)posts SET post_content = replace(post_content, 'http://staging.sandbox.pdms.ca', 'http://staging.pdms.ca')" --allow-root
wp db query "UPDATE $(wp db prefix --allow-root)postmeta SET meta_value = replace(meta_value, 'http://staging.sandbox.pdms.ca', 'http://staging.pdms.ca')" --allow-root
